<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>WebApplication</display-name>
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>User-Credentials</param-name>
		<param-value>com.properties.login</param-value>
	</context-param>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.servlets.main.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>WelcomeServlet</servlet-name>
		<servlet-class>com.servlets.main.WelcomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WelcomeServlet</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping> 
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.servlets.main.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>com.servlets.filters.AuthenticationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/login</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>AuthorizationFilter</filter-name>
		<filter-class>com.servlets.filters.AuthorizationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/success.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/welcome</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/logout</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>com.servlets.listener.SessionListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.servlets.listener.PropertyFileListener</listener-class>
	</listener>
</web-app>

